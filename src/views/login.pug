extends base

block content
  div.row.justify-content-center.mt-5
    div.card.col-6
      div.card-body
        form(method="POST")
          div.mb-3
            label(for="username").form-label 아이디
            input(placeholder="Username", id="username", name="username", type="text", required).form-control
          div.mb-3
            label(for="Password").form-label 비밀번호
            input(placeholder="Password", name="password", type="password", required).form-control
          div.d-flex.justify-content-end
            input(type="submit", value="로그인").btn.btn-primary
        include partials/social-login
        div.text-end
          a(href="/join").link-primary 회원가입 &rarr;
